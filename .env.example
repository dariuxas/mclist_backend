# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Server
PORT=8000
HOST=0.0.0.0
SERVER_NAME_LIMIT_LENGTH=60

# Frontend
FRONTEND_URL=https://your-frontend-url.com

# Database - PostgreSQL
DB_HOST=your-db-host.com
DB_PORT=5432
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=your-database-name
DB_CONNECTION_LIMIT=20
DB_MIN_CONNECTIONS=5
DB_ACQUIRE_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_CREATE_TIMEOUT=3000
DB_DESTROY_TIMEOUT=5000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Features
ENABLE_PING=1

# Security
RECAPTCHA_CLIENT_KEY=your-recaptcha-client-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
ABUSEIPDB_KEY=your-abuseipdb-api-key-here

# API Configuration
API_URL=http://localhost:8000
API_TITLE=MCList API - Development
API_DESCRIPTION=Minecraft Server List API - Development Environment
SWAGGER_ENABLED=true

# AI Services (Optional)
DEEPSEEK_API_KEY=your-deepseek-api-key